{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "This is a JSON schema representation of inventory updates.",
  "type": "object",
  "properties": {
    "inventoryDeltas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "identifier": {
            "type": "string"
          },
          "productIdentifier": {
            "type": "string"
          },
          "locationIdentifier": {
            "type": "string"
          },
          "quantity": {
            "type": "integer"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [
          "identifier",
          "productIdentifier",
          "locationIdentifier",
          "quantity",
          "type"
        ]
      }
    }
  }
}